<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="450.0"
      style="-fx-background-color: #f6f8fb;"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.SaberPro.SoftwareFront.Controllers.ModificarRolController">

    <children>

        <!-- Contenedor principal -->
        <VBox alignment="TOP_CENTER" spacing="20.0" maxWidth="360.0"
              style="-fx-background-color: white; -fx-border-color: #E0E0E0;
                  -fx-border-radius: 12; -fx-background-radius: 12;
                  -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 12, 0, 0, 4);">
            <padding>
                <Insets top="25.0" bottom="25.0" left="30.0" right="30.0"/>
            </padding>

            <!-- Título del formulario -->
            <Label text="Asignar Rol" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #37474F;" />

            <!-- Selector del Tipo de Rol -->
            <VBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Seleccione el Tipo de Rol:" style="-fx-font-size: 14px; -fx-text-fill: #37474F;" />
                <ComboBox fx:id="tipoRolComboBox" promptText="Seleccione un rol" prefWidth="300.0"
                          style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #B0BEC5; -fx-padding: 8;"/>
            </VBox>

            <!-- Lista desplegable para Docentes -->
            <VBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Seleccione el Docente:" style="-fx-font-size: 14px; -fx-text-fill: #37474F;" />
                <ComboBox fx:id="docenteComboBox" promptText="Seleccione un docente" prefWidth="300.0"
                          style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #B0BEC5; -fx-padding: 8;"/>
            </VBox>

            <!-- Botón Guardar -->
            <Button text="Crear Usuario" onAction="#onGuardarRolClick" prefWidth="300.0" prefHeight="32.0"
                    style="-fx-background-color: #0D6EFD; -fx-text-fill: white; -fx-background-radius: 8;">
                <font>
                    <Font name="Segoe UI Semibold" size="14.0"/>
                </font>
            </Button>
        </VBox>

    </children>
</VBox>