<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.SaberPro.SoftwareFront.Controllers.DashboardController" stylesheets="@../../../CSS/dashboard.css">
    <top>
        <VBox>
            <!-- Barra superior -->
            <HBox style="-fx-background-color: #1e293b; -fx-padding: 4px 4px; -fx-alignment: CENTER_LEFT;">

                <!-- MenuBar alineado a la izquierda -->
                <MenuBar style="-fx-background-color: transparent; -fx-font-size: 18px;">
                    <Menu text="Menú" style="-fx-text-fill: white;">
                        <MenuItem text="Inicio" onAction="#onButtonDashboardInicio" style="-fx-text-fill: white;"/>
                        <Menu text="Cargar reportes" style="-fx-text-fill: white;">
                            <MenuItem text="Subir reportes" onAction="#onButtonDashboardSReporte" style="-fx-text-fill: white;"/>
                            <MenuItem text="Subir informes" onAction="#onButtonDashboardSInformes" style="-fx-text-fill: white;"/>
                        </Menu>
                        <Menu text="Ver reportes" style="-fx-text-fill: white;">
                            <MenuItem text="Generales" onAction="#onButtonDashboardGeneral" style="-fx-text-fill: white;"/>
                            <MenuItem text="Específicos" onAction="#onButtonDashboardEspecificos" style="-fx-text-fill: white;"/>
                        </Menu>
                        <Menu text="Acciones de mejora" style="-fx-text-fill: white;">
                            <MenuItem text="Asignar" onAction="#onButtonDashboardAsignar" style="-fx-text-fill: white;"/>
                            <MenuItem text="Seguimiento" onAction="#onButtonDashboardSeguimiento" style="-fx-text-fill: white;"/>
                        </Menu>
                        <Menu text="CRUD" style="-fx-text-fill: white;">
                            <MenuItem text="Crear rol" onAction="#onButtonDashboardCrearRol" style="-fx-text-fill: white;"/>
                            <MenuItem text="Modificar rol" onAction="#onButtonDashboardConsultarRol" style="-fx-text-fill: white;"/>
                        </Menu>
                    </Menu>
                </MenuBar>

                <!-- Espaciador que empuja el menú a la derecha -->
                <Region HBox.hgrow="ALWAYS" />

                <!-- Botón Volver a la derecha -->
                <Button text="Volver" onAction="#onAtrasClick" style="-fx-background-color: #1e293b; -fx-font-size: 18px; -fx-text-fill: white; -fx-padding: 8px 20px; -fx-border-radius: 8px; -fx-background-radius: 8px;" HBox.hgrow="NEVER"/>

            </HBox>
        </VBox>
    </top>

    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: white;" VBox.vgrow="ALWAYS" />
    </center>
</BorderPane>


