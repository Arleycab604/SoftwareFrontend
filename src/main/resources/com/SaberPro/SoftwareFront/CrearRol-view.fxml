<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<VBox alignment="CENTER" prefHeight="620.0" prefWidth="480.0"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.SaberPro.SoftwareFront.Controllers.CrearRolController">

    <stylesheets>
        <URL value="@../../../CSS/Carga.css" />
    </stylesheets>

    <children>
        <!-- Contenedor principal (tarjeta) -->
        <VBox alignment="TOP_CENTER" spacing="20.0" maxWidth="380.0" styleClass="tarjeta-formulario">
            <padding>
                <Insets top="30.0" bottom="30.0" left="30.0" right="30.0"/>
            </padding>

            <!-- Título del formulario -->
            <Label text="Asignar o Modificar Rol" styleClass="titulo-principal" />

            <!-- Selector de Tipo de Rol -->
            <VBox spacing="8.0" alignment="CENTER_LEFT">
                <Label text="Tipo de Rol:" styleClass="label-campo" />
                <ComboBox fx:id="tipoRolComboBox" promptText="Seleccione el rol" prefWidth="320.0" styleClass="combo-personalizado"/>
            </VBox>

            <!-- Lista para Docentes -->
            <VBox spacing="8.0" alignment="CENTER_LEFT">
                <Label text="Docente:" styleClass="label-campo" />
                <ComboBox fx:id="docenteComboBox" promptText="Seleccione un docente" prefWidth="320.0" styleClass="combo-personalizado"/>
            </VBox>

            <!-- Fecha de Inicio -->
            <VBox spacing="8.0" alignment="CENTER_LEFT">
                <Label text="Fecha de Inicio:" styleClass="label-campo" />
                <DatePicker fx:id="fechaInicioDatePicker" prefWidth="320.0" styleClass="combo-personalizado"/>
            </VBox>

            <!-- Duración -->
            <VBox spacing="8.0" alignment="CENTER_LEFT">
                <Label text="Duración del Rol (Meses):" styleClass="label-campo" />
                <TextField fx:id="duracionField" promptText="Ingrese duración en meses" prefWidth="320.0" styleClass="combo-personalizado"/>
            </VBox>

            <!-- Botones -->
            <HBox alignment="CENTER" spacing="15.0">
                <Button text="Crear Rol" onAction="#onGuardarRolClick" prefWidth="140.0" prefHeight="38.0"
                        styleClass="button" />
                <Button text="Modificar Usuario" onAction="#onModificarRolClick" prefWidth="140.0" prefHeight="38.0"
                        styleClass="button" />
            </HBox>

        </VBox>
    </children>
</VBox>

