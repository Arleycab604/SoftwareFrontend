<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.SaberPro.SoftwareFront.Controllers.Acciones.CrearPropuestaController" spacing="10" alignment="CENTER" >
    <padding>
        <Insets top="20" right="15" bottom="10" left="5" />
    </padding>
    <children>
        <TextField fx:id="txtNombrePropuesta" promptText="Nombre de la propuesta" />
        <TextArea fx:id="txtDescripcion" promptText="Descripción" />
        <ComboBox fx:id="cmbModulo" promptText="Seleccionar módulo" />
        <DatePicker fx:id="dpFechaLimite" promptText="Fecha límite" />
        <Button text="Crear" onAction="#handleCrear" />
        <Button text="Cancelar" onAction="#handleCancelar" />
    </children>
</VBox>
