<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="480.0" prefWidth="450.0"
      style="-fx-background-color: linear-gradient(to bottom right, #ECEFF1, #CFD8DC);"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.SaberPro.SoftwareFront.Controllers.RestoreController">

    <children>
        <VBox alignment="TOP_CENTER" maxWidth="360.0" spacing="20.0" style="-fx-background-color: white; -fx-border-color: #B0BEC5; -fx-border-radius: 15; -fx-background-radius: 15;">
            <padding>
                <Insets top="30.0" bottom="30.0" left="30.0" right="30.0"/>
            </padding>

            <!-- LOGOS -->
            <HBox alignment="CENTER" spacing="15.0">
                <children>
                    <ImageView fitHeight="64.0" fitWidth="72.0" preserveRatio="true">
                        <image>
                            <Image url="@../../../Images/logounillanos.png"/>
                        </image>
                    </ImageView>
                    <ImageView fitHeight="60.0" fitWidth="130.0" preserveRatio="true">
                        <image>
                            <Image url="@../../../Images/logoicfes.png"/>
                        </image>
                    </ImageView>
                </children>
            </HBox>

            <!-- NUEVA CONTRASEÑA -->
            <HBox alignment="CENTER_LEFT" spacing="8.0">
                <children>
                    <StackPane prefWidth="250.0">
                        <children>
                            <PasswordField fx:id="r1_passwordField" promptText="Nueva contraseña" prefWidth="250.0" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #B0BEC5;">
                                <font>
                                    <Font name="Segoe UI" size="14.0"/>
                                </font>
                            </PasswordField>
                            <TextField fx:id="r1_textFieldVisible" promptText="Nueva contraseña" prefWidth="250.0" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #B0BEC5;" visible="false" managed="false">
                                <font>
                                    <Font name="Segoe UI" size="14.0"/>
                                </font>
                            </TextField>
                        </children>
                    </StackPane>
                    <Button fx:id="togglePassword1" onAction="#togglePasswordVisibility" style="-fx-background-color: transparent; -fx-cursor: hand;">
                        <graphic>
                            <ImageView fx:id="iconoOjo1" fitWidth="20" fitHeight="20"/>
                        </graphic>
                    </Button>
                </children>
            </HBox>

            <!-- VERIFICAR CONTRASEÑA -->
            <HBox alignment="CENTER_LEFT" spacing="8.0">
                <children>
                    <StackPane prefWidth="250.0">
                        <children>
                            <PasswordField fx:id="r2_passwordField" promptText="Verifique la contraseña" prefWidth="250.0" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #B0BEC5;">
                                <font>
                                    <Font name="Segoe UI" size="14.0"/>
                                </font>
                            </PasswordField>
                            <TextField fx:id="r2_textFieldVisible" promptText="Verifique la contraseña" prefWidth="250.0" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #B0BEC5;" visible="false" managed="false">
                                <font>
                                    <Font name="Segoe UI" size="14.0"/>
                                </font>
                            </TextField>
                        </children>
                    </StackPane>
                    <Button fx:id="togglePassword2" onAction="#togglePasswordVisibility" style="-fx-background-color: transparent; -fx-cursor: hand;">
                        <graphic>
                            <ImageView fx:id="iconoOjo2" fitWidth="20" fitHeight="20"/>
                        </graphic>
                    </Button>
                </children>
            </HBox>

            <!-- BOTÓN CAMBIAR CONTRASEÑA -->
            <Button fx:id="restoreButton" onAction="#onRestore_passwordButtonClick" text="Cambiar contraseña" prefWidth="250.0" style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-background-radius: 8;">
                <font>
                    <Font name="Segoe UI" size="15.0"/>
                </font>
            </Button>

            <!-- BOTÓN ATRÁS -->
            <Hyperlink text="⟵ Atrás" onAction="#onBackButtonClick" textFill="#607D8B" style="-fx-border-color: transparent;">
                <font>
                    <Font name="Segoe UI" size="13.0"/>
                </font>
            </Hyperlink>

        </VBox>
    </children>
</VBox>





