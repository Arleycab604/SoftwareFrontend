<?xml version="1.0" encoding="UTF-8"?>
        <?import javafx.geometry.Insets?>
        <?import javafx.scene.control.*?>
        <?import javafx.scene.image.*?>
        <?import javafx.scene.layout.*?>
        <?import javafx.scene.text.Font?>
<VBox alignment="CENTER" prefHeight="480.0" prefWidth="450.0"
      style="-fx-background-color: #f6f8fb;"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.SaberPro.SoftwareFront.Controllers.LoginController">

<children>
   <VBox alignment="TOP_CENTER" spacing="20.0" maxWidth="360.0"
         style="-fx-background-color: white; -fx-border-color: #E0E0E0;
                     -fx-border-radius: 12; -fx-background-radius: 12;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 12, 0, 0, 4);">
      <padding>
         <Insets top="25.0" bottom="25.0" left="30.0" right="30.0"/>
      </padding>

      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <ImageView fitHeight="65.0" fitWidth="65.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../Images/logounillanos.png"/>
               </image>
            </ImageView>
            <ImageView fitHeight="60.0" fitWidth="130.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../Images/logoicfes.png"/>
               </image>
            </ImageView>
         </children>
      </HBox>

      <Label text="Iniciar Sesión" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #37474F;" />
      <TextField fx:id="usernameField" promptText="Usuario" prefWidth="260.0" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #B0BEC5; -fx-padding: 8;">
         <font>
            <Font name="Segoe UI" size="14.0"/>
         </font>
      </TextField>

      <PasswordField fx:id="passwordField" promptText="Contraseña" prefWidth="260.0" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #B0BEC5; -fx-padding: 8;">
         <font>
            <Font name="Segoe UI" size="14.0"/>
         </font>
      </PasswordField>

      <Button text="Iniciar Sesión" onAction="#onLoginButtonClick" prefWidth="260.0" prefHeight="32.0" style="-fx-background-color: #0D6EFD; -fx-text-fill: white; -fx-background-radius: 8">
         <font>
            <Font name="Segoe UI Semibold" size="14.0"/>
         </font>
      </Button>

      <Hyperlink text="¿Olvidaste tu contraseña?" textFill="#0D6EFD" onAction="#onForgotPasswordClick">
         <font>
            <Font name="Segoe UI" size="13.0"/>
         </font>
      </Hyperlink>
   </VBox>
</children>
</VBox>
