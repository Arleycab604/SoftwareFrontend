<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="480.0" prefWidth="450.0" spacing="15.0"
      style="-fx-background-color: #E7E7E7;" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.front.RecoveryController">
    <children>
        <VBox alignment="TOP_CENTER" maxWidth="350.0" spacing="20.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #B0BEC5; -fx-border-radius: 10; -fx-background-radius: 10;">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            <HBox alignment="CENTER" spacing="10.0">
                <children>
                    <ImageView fitHeight="71.0" fitWidth="78.0" preserveRatio="true">
                        <image>
                            <Image url="@../../../Images/logounillanos.png"/>
                        </image>
                    </ImageView>
                    <ImageView fitHeight="69.0" fitWidth="138.0" preserveRatio="true">
                        <image>
                            <Image url="@../../../Images/logoicfes.png"/>
                        </image>
                    </ImageView>
                </children>
            </HBox>

            <Label text="Recuperación del Usuario">
                <font>
                    <Font name="Segoe UI" size="19.0"/>
                </font>
            </Label>

            <Label wrapText="true" text="Ingrese el código enviado a su correo electrónico. Este código vence en 5 minutos." style="-fx-text-fill: #333;">
                <font>
                    <Font name="Segoe UI" size="13.0"/>
                </font>
            </Label>

            <TextField fx:id="codeField" promptText="Introduce el código"
                       prefWidth="307.0" style="-fx-background-radius: 8;">
                <font>
                    <Font name="Segoe UI" size="14.0"/>
                </font>
            </TextField>

            <Button onAction="#onNextButtonClick" prefHeight="32.0" prefWidth="307.0" style="-fx-background-color: #1565C0; -fx-text-fill: white; -fx-background-radius: 6;" text="Siguiente">
                <font>
                    <Font name="Segoe UI" size="14.0"/>
                </font>
            </Button>

            <!-- HBox para Reenviar y Atrás -->
            <HBox alignment="CENTER" spacing="10.0">
                <children>
                    <Hyperlink text="⟵ Atrás" textFill="#607D8B" onAction="#onAtrasClick">
                        <font>
                            <Font size="13.0"/>
                        </font>
                    </Hyperlink>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Hyperlink text="Reenviar" textFill="#607D8B" onAction="#onReenviarClick">
                        <font>
                            <Font size="13.0"/>
                        </font>
                    </Hyperlink>
                </children>
            </HBox>
        </VBox>
    </children>
</VBox>

